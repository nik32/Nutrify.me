<html>
    <body>
        <%
            let reqURL = reqFromAdmin ? '/api/admin/usermeals/' + id + '/updateMeal' : 
                                        '/api/meals/' + id + '/updateMeal';
        %>
        <form action = <%= reqURL %> method = "POST">
            Name<input type="hidden" name="username" value = "<%= username %>"><br>
            Name<input type="text" name="name" value = "<%= name %>"><br>
            Calories<input type="number" name="calorie" value = "<%= calorie %>"><br>
            Description<input type="text" name="description" value = "<%= description %>"><br>
            <input type="submit" value="Update">
        </form>
    </body>
</html>